<Window x:Class="JapanGuessr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JapanGuessr"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="MainWindow" Height="600" Width="900" Background="{x:Null}" Foreground="{x:Null}">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF2B8F8F" Offset="0"/>
                <GradientStop Color="#FF1D2F7E" Offset="0.7"/>
                <GradientStop Color="#FF1D2F7E" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Image x:Name="imgPicture" HorizontalAlignment="Left" Height="340" Margin="10,10,0,0" VerticalAlignment="Top" Width="460" Stretch="Uniform"/>
        <Button x:Name="buttonUpdate" Content="Update" HorizontalAlignment="Center" Margin="0,0,0,10" VerticalAlignment="Bottom" Width="120" Height="35" Click="ButtonUpdate_Click"/>
    </Grid>
</Window>
