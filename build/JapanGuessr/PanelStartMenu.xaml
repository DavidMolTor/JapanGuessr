<UserControl x:Class="JapanGuessr.PanelStartMenu"  x:Name="panelStartMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JapanGuessr"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200" Height="800" Width="1200">
    <UserControl.Resources>
        <!-- Button style for mouse hover effect -->
        <Style x:Key="HoverButton" TargetType="Button">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid Name="HoverGrid" RenderTransformOrigin="{TemplateBinding RenderTransformOrigin}" Background="{TemplateBinding Background}">
                            <Grid.RenderTransform>
                                <ScaleTransform />
                            </Grid.RenderTransform>
                            <Border BorderThickness="0">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Button.Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black" ShadowDepth="15" BlurRadius="15" Opacity="0.4" />
                                    </Setter.Value>
                                </Setter>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="HoverGrid" Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)" To="1.2" Duration="0:0:0.05" />
                                            <DoubleAnimation Storyboard.TargetName="HoverGrid" Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)" To="1.2" Duration="0:0:0.05" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="HoverGrid" Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)" To="1.0" Duration="0:0:0.05" />
                                            <DoubleAnimation Storyboard.TargetName="HoverGrid" Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)" To="1.0" Duration="0:0:0.05" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF2B8F8F" Offset="0"/>
                <GradientStop Color="#FF1D2F7E" Offset="0.7"/>
                <GradientStop Color="#FF1D2F7E" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="JAPAN GUESSR" HorizontalAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Top" FontFamily="Orbitron" FontSize="72" Background="{x:Null}" Foreground="Gainsboro"/>
        <Button x:Name="buttonNormal" Style="{StaticResource HoverButton}" Width="300" Foreground="White" Height="90" Click="Button_Click" RenderTransformOrigin="0.5,0.5" Background="#00000000" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,80">
            <Grid Background="#FF323232" Width="300" Height="90">
                <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="ESTÁNDAR" FontSize="32" Margin="0" FontFamily="Orbitron" Foreground="Gainsboro" />
            </Grid>
        </Button>
        <Button x:Name="buttonOnlyGPS" Style="{StaticResource HoverButton}" Width="300" Foreground="White" Height="90" Click="Button_Click" RenderTransformOrigin="0.5,0.5" Background="#00000000" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,220,0,0">
            <Grid Background="#FF323232" Width="300" Height="90">
                <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="SOLO GPS" FontSize="32" Margin="0" FontFamily="Orbitron" Foreground="Gainsboro" />
            </Grid>
        </Button>
        <Button x:Name="buttonAddGPS" Style="{StaticResource HoverButton}" Width="300" Foreground="White" Height="90" Click="Button_Click" RenderTransformOrigin="0.5,0.5" Background="#00000000" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,520,0,0">
            <Grid Background="#FF323232" Width="300" Height="90">
                <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="AÑADIR GPS" FontSize="32" Margin="0" FontFamily="Orbitron" Foreground="Gainsboro" />
            </Grid>
        </Button>
    </Grid>
</UserControl>
